            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ADD TO CATALOGUE"
            android:textColor="#E3E3E3"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>
